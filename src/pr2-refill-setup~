(defparameter breakfast-cereal-1
  (list 'breakfast-cereal-1 :breakfast-cereal
        '((-2 2 0.75) (0 0 0 1))
        '(0.08 0.03 0.12)
        (list :right :left) (list nil) :back))
        

(defparameter breakfast-cereal-2
  (list 'breakfast-cereal-2 :breakfast-cereal
        '((-2 2 0.75) (0 0 0 1))
        '(0.08 0.03 0.12)
        (list :right :left) (list nil) :back))
          
(defparameter spawn-list (list object-list-bottle
                                       breakfast-cereal-1
