   "map" 0.0
   (cl-transforms:make-3d-vector -2 0.2 0.68)
   (cl-transforms:euler->quaternion :ax 0 :ay 0 :az 0)))

(defparameter unsuccesful-point-2-refill
  (cl-transforms-stamped:make-pose-stamped
   "map" 0.0
